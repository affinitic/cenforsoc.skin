<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <metal:noborder fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1)" />
</head>

<body>
<div metal:fill-slot="main">
   <h1><a href="formation"><img src="images/formation.png" /></a> Gestion de la base de donn&eacute;es des formations</h1>
   <a href="formation_ajouter"> Ajouter une formation </a>
   <fieldset>
      <legend class="legende">Lister une formation</legend>      
      <tal:requete tal:define="Formations python:here.admin_base.formation.zsql_formation_select_all()">
         <tal:boucle tal:repeat="form Formations">
            <fieldset>
               <ul>
                  <li>
                     <span class="etiquette_formation">Titre</span> : 
                     <span tal:content="form/form_titre" 
                           class="donnee_formation" />
                  </li>
                  <li>
                     <span class="etiquette_formation">Dur&eacute;e</span> : 
                     <span tal:content="form/form_duree" 
                           class="donnee_formation" />
                  </li>
                  <li>
                     <span class="etiquette_formation">Date de d&eacute;but</span> : 
                     <span tal:content="python: DateTime(str(form.form_date_deb)).strftime('%d-%m-%Y')"
                           class="donnee_formation" />
                  </li>
                  <li>
                     <span class="etiquette_formation">Description</span> : 
                     <span tal:content="form/form_description" 
                           class="donnee_formation" />
                  </li>
                  <li>
                     <span class="etiquette_formation">Niveau requis</span> : 
                     <span tal:content="form/form_niveau_requis" 
                           class="donnee_formation" />
                  </li>
                  <li>
                     <span class="etiquette_formation">Etat</span> : 
                     <span tal:content="form/form_etat" 
                           class="donnee_formation" />
                  </li>
               </ul>
               <hr />
               <div>
                  <table align="center"
                         width="100%">
                     <tr>
                        <td align="left">
                           <a href=""
                              tal:attributes="href string:formation_modifier?form_pk=${form/form_pk}">
                              Modifier cette formation</a>
                        </td>
                        <td align="right">
                           <a href=""
                              tal:attributes="href string:formation_supprimer?form_pk=${form/form_pk}">
                              Effacer cette formation</a>
                        </td>
                     </tr>
                  </table>
            </fieldset>
         </tal:boucle>
      </tal:requete>
   </fieldset>
 </div>
</body>
</html>
