<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <metal:noborder fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1)" />
</head>

<body>
<div metal:fill-slot="main">
    <h1>Gestion des formations</h1>
   Gestion de la base de données des formations
   <a href="formation_ajouter"> Ajouter une formation </a>
   <fieldset>
      <legend class="legende">Lister une formation</legend>
      <tal:requete tal:define="Formations python:view.getAllFormations()">
         <tal:boucle tal:repeat="formation Formations">
            <div class="boite-resultat">
               <ul>
                  <li>
                     <span class="etiquette_formation">Titre</span> :
                     <span tal:content="formation/form_titre"
                           class="donnee-formation" />
                  </li>
                  <li>
                     <span class="etiquette_formation">Durée</span> :
                     <span tal:content="formation/form_duree"
                           class="donnee-formation" />
                  </li>
                  <li>
                     <span class="etiquette_formation">Date de début</span> :
                     <span tal:content="python:formation.form_date_deb.strftime('%d-%m-%Y')"
                           class="donnee-formation" />
                  </li>
                  <li>
                     <span class="etiquette_formation">Description</span> :
                     <span tal:content="formation/form_description"
                           class="donnee-formation" />
                  </li>
                  <li>
                     <span class="etiquette_formation">Niveau requis</span> :
                     <span tal:content="formation/form_niveau_requis"
                           class="donnee-formation" />
                  </li>
                  <li>
                     <span class="etiquette_formation">Etat</span> :
                     <span tal:content="formation/form_etat"
                           class="donnee-formation" />
                  </li>
               </ul>
               <hr />
               <div>
                  <table align="center"
                         width="100%">
                     <tr>
                        <td align="left">
                           <a href=""
                              tal:attributes="href string:modifier-une-formation?formationPk=${formation/form_pk}">
                              Modifier cette formation</a>
                        </td>
                        <td align="right">
                           <a href=""
                              tal:attributes="href string:supprimer_formation?formationPk=${formation/form_pk}">
                              Effacer cette formation</a>
                        </td>
                     </tr>
                  </table>
            </div>
         </tal:boucle>
      </tal:requete>
   </fieldset>
 </div>
</body>
</html>
