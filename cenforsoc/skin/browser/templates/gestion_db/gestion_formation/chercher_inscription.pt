<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <metal:js fill-slot="javascript_head_slot">
        <script src="++resource++collective.javascript.jqueryui/js/jquery-1.4.2.min.js"
                type="text/javascript"></script>
        <script src="++resource++collective.javascript.jqueryui/js/jquery-ui.min.js"
                type="text/javascript"></script>
    </metal:js>
    <metal:css fill-slot="style_slot">
        <link href="++resource++collective.javascript.jqueryui/css/ui-lightness/jquery-ui.css"
              type="text/css"
              rel="stylesheet" />
    </metal:css>

    <metal:noborder fill-slot="top_slot"
                    tal:define="dummy python:request.set('disable_border',1)" />
</head>

<body>
<div metal:fill-slot="main">
    <div id="zone-titre-moteur-recherche">
        <h1>Rechercher une inscription</h1>
        <div class="search-text-intro">Plusieurs types de recherche sont possibles.</div>
    </div>

    <div id="zone-moteur-recherche">
        <fieldset class="search-zone-nom">
            <legend class="search-legend"> A partir du nom d'une personne</legend>
            <div id="info-champs">
            </div>
            <form action="decrire-une-inscription"
                  method="post">
                <div class="div_question">
                    <input type="text"
                           id="formation-nom-inscrit"
                           name="inscriptionNom"
                           value=""
                           size="50">
                </div>
                <div class="formControls" align="center">
                    <input type="submit"
                           value="lancer la recherche"
                           class="search-button" />
                </div>
            </form>
        </fieldset>
        <fieldset class="search-zone-nom">
            <legend class="search-legend"> A partir de la liste de tous les inscrits</legend>
            <div id="info-champs">
            </div>
            <form action="decrire-une-inscription"
                  method="post">
                <div class="div_question">
                    <select tal:define="inscriptions python:view.getAllDistinctInscriptions()"
                            name="inscriptionPk">
                        <option>...</option>
                        <tal:boucle tal:repeat="inscription inscriptions">
                            <option value=""
                                    tal:attributes="value inscription/form_ins_pk">
                                <span tal:content="inscription/form_ins_nom" />
                                <span tal:content="inscription/form_ins_prenom" />
                            </option>
                        </tal:boucle>
                    </select>
                </div>
                <div class="formControls" align="center">
                    <input type="submit"
                           value="lancer la recherche"
                           class="search-button" />
                </div>
            </form>
        </fieldset>
    </div>
</div><!-- div metal-->
</body>
</html>

