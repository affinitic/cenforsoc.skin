<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <metal:noborder fill-slot="top_slot"
                    tal:define="dummy python:request.set('disable_border',1)" />
</head>

<body>
<div metal:fill-slot="main">
    <h1>Gestion des périodiques</h1>
    <fieldset class="fieldset-border">
        <legend class="legende">Ajouter un périodique</legend>
        <form action="insertPeriodique"
              method="post">
            <div class="formInput">
                <label for="periodiqueTitre">Titre :</label>
                <br />
                <input type="text"
                       name="periodiqueTitre"
                       id="periodiqueTitre"
                       size="50"/>
            </div>
            <div class="formInput">
                <label for="periodiqueDescription">Description :</label>
                <textarea name="periodiqueDescription"
                        rows="5"
                        cols="80"></textarea>
            </div>
            <div class="formControls">
                <input type="hidden"
                     name="operation"
                     value="insert" />
                <input class="context"
                     type="submit"
                     value="Enregister le périodique" />
            </div>
        </form>
    </fieldset>
</div><!-- div metal-->
</body>
</html>

