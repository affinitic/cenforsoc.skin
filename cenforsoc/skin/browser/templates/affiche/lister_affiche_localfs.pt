<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <metal:noborder fill-slot="top_slot"
                    tal:define="dummy python:request.set('disable_border',1)" />
</head>

<body>
<div metal:fill-slot="main"
     tal:define="affiches python: view.listAfficheInLocalFs()">
    <h1>Lister les affiches</h1>
    <tal:boucle tal:repeat="afficheId affiches">
        <fieldset class="donnee-cadre">
            <ul id="donnee-liste">
                <li>
                    <span tal:define="affiche string:affiche_cenforsoc/${afficheId}">
                        <a href=""
                           tal:attributes="href string:affiche_cenforsoc/${afficheId}">
                        <img tal:attributes="src affiche;
                                             title string:${afficheId};
                                             alt string:${afficheId}" /></a>
                        <br />
                        <span tal:content="affiche"></span>
                    </span>
                </li>
            </ul>
            <ul id="menu-gestion-donnee">
                <li>
                    <a href=""
                       tal:attributes="href string:modifier-une-affiche">
                        Modifier une affiche</a>
                </li>
                <li>
                    <a href=""
                       tal:attributes="href string:supprimer-une-affiche">
                       Effacer une affiche</a>
                </li>
            </ul>
        </fieldset>
    </tal:boucle>
</div><!-- div metal-->
</body>
</html>

