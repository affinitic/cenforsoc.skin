<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <metal:noborder fill-slot="top_slot"
                    tal:define="dummy python:request.set('disable_border',1)" />
</head>

<body>
<div metal:fill-slot="main">
   <h1>
       <img src="images/livre.png" />
       Gestion des livres
   </h1>
   <fieldset class="formCadre">
       <legend class="legende">Ajouter un p&eacute;riodique</legend>
       <form action="inserer-un-livre"
            methof="post">
          <div class="formInput">
              <label for="livreTitre">Titre :</label>
              <br />
              <input type="text"
                     name="livreTitre"
                     id="livreTitre"
                     size="50"/>
          </div>
          <div class="formInput">
              <label for="livreDescription">Description :</label>
              <textarea name="livreDescription"
                        rows="5"
                        cols="80"></textarea>
          </div>
          <div class="formControls">
              <input type="hidden"
                     name="operation"
                     value="insert" />
              <input class="context"
                     type="submit"
                     value="Enregister le livre" />
          </div>
        </form>
    </fieldset>
</div><!-- div metal-->
</body>
</html>

