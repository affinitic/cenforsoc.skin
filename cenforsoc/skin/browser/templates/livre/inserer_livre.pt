<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="arsia">

<body>

<div metal:fill-slot="main">

    <h1>
       <img src="images/livre.png" />
       Gestion des livres
    </h1>
    <fieldset class="formCadre">
        <legend class="legende">Ajouter un p&eacute;riodique</legend>
        <div tal:define="livreTitre request/livreTitre;
                         result view/gestionlivre;
                         status result/status"
             class="boite-resultat">

            <div tal:condition="python: status == 1">
                Le livre
                <span tal:content="livreTitre"
                      class="donnee-db" />
                est correctement enregistré.
            </div>
            <div tal:condition="python: status == 2">
                Le livre
                <span tal:content="livreTitre"
                      class="donnee-db" />
                est correctement modifié.
            </div>
            <div tal:condition="python: status == 3">
                Le livre
                <span tal:content="livreTitre"
                      class="donnee-db" />
                est correctement supprimé.
            </div>
            <div tal:condition="python: status == 0">
                <img src="alerte.png" />
                Un erreur s'est passée.
            </div>
        </div>

        <ul id="menu-gestion-donnee">
            <li>
                <a href=""
                   tal:attributes="href string:${context/portal_url}/chercher-un-livre">
                   Rechercher un livre</a>
            </li>
            <li>
                <a href=""
                   tal:attributes="href string:${context/portal_url}/ajouter-un-livre">
                   Cr&eacute;er un nouveau livre</a>
            </li>
            <li>
                <a href=""
                   tal:attributes="href string:${context/portal_url}/chercher-un-livre">
                    Modifier un livre</a>
            </li>
            <li>
                <a href=""
                   tal:attributes="href string:${context/portal_url}/chercher-un-livre">
                   Effacer un livre</a>
            </li>
        </ul>
    </fieldset>
</div>
</body>
</html>
