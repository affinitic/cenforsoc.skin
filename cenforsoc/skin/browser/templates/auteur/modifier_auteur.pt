<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <metal:noborder fill-slot="top_slot"
                    tal:define="dummy python:request.set('disable_border',1)" />
</head>

<body>
<div metal:fill-slot="main"
     tal:define="auteurNom request/auteurNom | nothing;
                 auteurPk request/auteurPk | nothing;
                 auteurs python:view.getSearchingAuteur(auteurPk)">">
   <h1>
       Gestion des auteurs
   </h1>
   <fieldset>
      <legend class="legende">Modifier un auteur</legend>
          <tal:boucle tal:repeat="auteur auteurs">
              <form action="updateAuteur"
                    methof="post">
                  <div class="formInput">
                      <label for="auteurNom">Nom :</label>
                      <br />
                      <input type="text"
                             name="auteurNom"
                             id="auteurNom"
                             size="50"
                             value=""
                             tal:attributes="value auteur/auteur_nom" />
                  </div>
                  <div class="formInput">
                      <label for="auteurPrenom">Prénom :</label>
                      <br />
                      <input type="text"
                             name="auteurPrenom"
                             id="auteurPrenom"
                             size="50"
                             value=""
                             tal:attributes="value auteur/auteur_prenom" />
                  </div>
                  <div class="formControls" align="center">
                      <input type="hidden"
                             name="auteurPk"
                             value=""
                             tal:attributes="value auteur/auteur_pk" />
                      <input type="hidden"
                             name="operation"
                             value="update" />
                      <input class="context"
                             type="submit"
                             value="Mettre à jour l'auteur" />
                  </div>
              </form>
          </tal:boucle>
   </fieldset>
</div><!-- div metal-->
</body>
</html>

