<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <metal:noborder fill-slot="top_slot"
                    tal:define="dummy python:request.set('disable_border',1)" />
</head>

<body>
<div metal:fill-slot="main">
   <h1>
       Gestion des auteurs
   </h1>
   <fieldset class="formCadre">
       <legend class="legende">Ajouter un auteur</legend>
       <form action="insertAuteur"
            methof="post">
          <div class="formInput">
              <label for="auteurNom">Nom :</label>
              <br />
              <input type="text"
                     name="auteurNom"
                     id="auteurNom"
                     size="50"/>
          </div>
          <div class="formInput">
              <label for="auteurPrenom">Prenom :</label>
              <br />
              <input type="text"
                     name="auteurPrenom"
                     id="auteurPrenom"
                     size="50"/>
              
          </div>
          <div class="formControls">
              <input type="hidden"
                     name="operation"
                     value="insert" />
              <input class="context"
                     type="submit"
                     value="Enregister cet auteur" />
          </div>
        </form>
    </fieldset>
</div><!-- div metal-->
</body>
</html>

