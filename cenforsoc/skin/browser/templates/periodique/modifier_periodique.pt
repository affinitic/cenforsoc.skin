<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <metal:noborder fill-slot="top_slot"
                    tal:define="dummy python:request.set('disable_border',1)" />
</head>

<body>
<div metal:fill-slot="main"
     tal:define="periodiqueTitre request/periodiqueTitre | nothing;
                 periodiquePk request/periodiquePk | nothing;
                 periodiques python:view.getSearchingPeriodique(periodiquePk)">">
   <h1>
       <img src="images/periodique.png" />
       Gestion des périodiques
   </h1>
   <fieldset>
      <legend class="legende">Modifier un p&eacute;riodique</legend>

      <tal:requete tal:define="Periodiques python:view.getSearchingPeriodique(periodiquePk)">
          <tal:boucle tal:repeat="elem Periodiques">
              <form action="periodique_executer_modification"
                    methof="post">
                 <table width="95%"
                        align="center"
                        border="0"
                        cellpadding="5"
                        cellspacing="0">
                    <tr>
                       <td class="etiquette">Titre</td>
                       <td>
                          <input type="text"
                                 name="per_titre"
                                 size="50"
                                 value=""
                                 tal:attributes="value elem/per_titre" />
                       </td>
                    </tr>
                    <tr>
                       <td class="etiquette" valign="top">Description</td>
                       <td>
                          <textarea name="per_description"
                                    rows="5"
                                    cols="80"
                                    value=""
                                    tal:attributes="value elem/per_description"
                                    tal:content="elem/per_description"></textarea>
                       </td>
                    </tr>
                 </table>
                 <input type="hidden"
                        name="periodiquePk"
                        value=""
                        tal:attributes="value periodiquePk" />

                 <div class="formControls" align="center">
                        <input class="context"
                               type="submit"
                               value="Mettre &agrave; jour le p&eacute;riodique"
                               />
                 </div>
              </form>
          </tal:boucle>
      </tal:requete>










