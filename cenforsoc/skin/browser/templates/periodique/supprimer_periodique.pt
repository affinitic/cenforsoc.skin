<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <metal:noborder fill-slot="top_slot"
                    tal:define="dummy python:request.set('disable_border',1)" />
</head>

<body>
<div metal:fill-slot="main"
     tal:define="periodiquePk request/periodiquePk;
                 periodique python: view.getPeriodiqueByPk(periodiquePk)">
    <h1>Supprimer un périodique</h1>
        <fieldset class="donnee-cadre">
            <form action="inserer-un-periodique"
                  method="post">
                <ul id="donnee-liste">
                    <li>
                        <span class="donnee-etiquette">Titre</span> :
                        <span tal:content="periodique/per_titre"
                              class="donnee-db" />
                    </li>
                    <li>
                        <span class="donnee-etiquette">Description</span> :
                        <span tal:content="periodique/per_description"
                              class="donnee-db" />
                    </li>
                </ul>
                <div class="formControls" align="center">
                    <input type="hidden"
                           name="periodiquePk"
                           value=""
                           tal:attributes="value periodique/per_pk" />
                    <input type="hidden"
                           name="operation"
                           value="delete" />
                    <input class="context"
                           type="submit"
                           value="Effacer le p&eacute;riodique" />
                </div>
            <ul id="menu-gestion-donnee">
                <li>
                    <a href=""
                       tal:attributes="href string:chercher-un-periodique?per_pk=${periodique/per_pk}">
                        Chercher ce périodique</a>
                </li>
            </ul>
        </fieldset>
</div><!-- div metal-->
</body>
</html>

